@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Roles table</h6>
    </div>
    <div class="card-header py-3">
        <a asp-action="create" class="btn btn-primary">Create a Role</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Settings</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.Name</td>
                            <td>
                                <a class="btn btn-secondary" asp-action="delete" asp-route-id="@role.Id">Delete</a>
                                <a class="btn btn-secondary" asp-action="Update" asp-route-id="@role.Id">Modify</a>
                                <a class="btn btn-secondary" asp-action="detail" asp-route-id="@role.Id">Detail</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

