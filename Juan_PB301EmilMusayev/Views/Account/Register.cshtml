@model RegisterVM
<div class="breadcrumb-area bg-img" data-bg="assets/img/banner/breadcrumb-banner.jpg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb-wrap text-center">
                    <nav aria-label="breadcrumb">
                        <h1 class="breadcrumb-title">Login-Register</h1>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Login-Register</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb area end -->
<!-- login register wrapper start -->
<div class="login-register-wrapper section-padding">
    <div class="container">
        <div class="member-area-from-wrap">
            <div class="row justify-content-center">
                <div class="login-reg-form-wrap signup-form">
                    <h2>Singup Form</h2>
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <form method="post">
                        <div class="single-input-item">
                            <label asp-for="Username"></label>
                            <input asp-for="Username" type="text" placeholder="Username" required />
                            <span class="text-danger" asp-validation-for="Username"></span>
                        </div>
                        <div class="single-input-item">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" type="text" placeholder="Email address" required />
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="single-input-item">
                                    <label asp-for="Password"></label>
                                    <input asp-for="Password" type="password" placeholder="Enter password" required />
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="single-input-item">
                                    <label asp-for="RepeatedPassword">Repeat Password</label>
                                    <input asp-for="RepeatedPassword" type="password" placeholder="Repeat password" required />
                                    <span class="text-danger" asp-validation-for="RepeatedPassword"></span>
                                </div>
                            </div>
                        </div>
                        <div class="single-input-item">
                            <div class="login-reg-form-meta">
                                <div class="remember-meta">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="subnewsletter">
                                        <label class="custom-control-label" for="subnewsletter">Subscribe Our Newsletter</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="single-input-item">
                            <button type="submit" class="btn">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial">
}
