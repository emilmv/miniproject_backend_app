@model HomeVM
@{
    ViewData["Title"] = "Home Page";
}
@await Component.InvokeAsync("Slider")
@await Component.InvokeAsync("Policy")

<section class="our-product section-padding">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title text-center">
                    <h2 class="title">Our Product</h2>
                    <p class="sub-title">
                        @Model.ProductDescription
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="product-carousel-4 mbn-50 slick-row-15 slick-arrow-style">
                    <!-- product single item start -->
                    @foreach (var product in Model.Products)
                    {
                        <div class="product-item mb-50">
                            <div class="product-thumb">
                                <a asp-controller="product" asp-action="detail" asp-route-id="@product.Id">
                                    <img src="assets/img/product/@product.DisplayImage" alt="" />
                                </a>
                            </div>
                            <div class="product-content">
                                <h5 class="product-name">
                                    <a asp-controller="product" asp-action="detail" asp-route-id="@product.Id">
                                        @product.Name
                                        </a>
                                </h5>
                                <div class="price-box">
                                    <span class="price-regular">$@product.DiscountPrice</span>
                                    <span class="price-old"><del>$@product.SalePrice</del></span>
                                </div>
                                <div class="product-action-link">
                                    <a href="#" data-toggle="tooltip" title="Wishlist">
                                        <i class="ion-android-favorite-outline"></i>
                                    </a>
                                    <a class="addToCart" data-id="@product.Id" data-toggle="tooltip" title="Add To Cart">
                                        <i class="ion-bag"></i>
                                    </a>
                                    <a asp-controller="product" asp-action="ProductModal"asp-route-id="@product.Id" class="productModal" data-toggle="modal" data-target="#quick_view">
                                        <span data-toggle="tooltip" title="Quick View">
                                            <i class="ion-ios-eye-outline"></i>
                                        </span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                    <!-- product single item start -->
                </div>
            </div>
        </div>
    </div>
</section>
<!-- our product area end -->
<!-- banner statistic area start -->
<div class="banner-statistics">
    <div class="container">
        <div class="row no-gutters mtn-30">
            @for (int i = 0; i < 2; i++)
            {
                <div class="col-md-6">
                    <div class="img-container mt-30">
                        <a href="product-details.html">
                            <img src="assets/img/banner/@Model.Banners[i].Image"
                                 alt="banner-image" />
                        </a>
                        <div class="banner-text">
                            <h5 class="banner-subtitle">@Model.Banners[i].SubTitle</h5>
                            <h3 class="banner-title">@Html.Raw(Model.Banners[i].Title)</h3>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- banner statistic area end -->
<!-- new products area start -->
<section class="top-seller-area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title text-center">
                    <h2 class="title">New Products</h2>
                    <p class="sub-title">
                        @Model.ProductDescription
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-4 col-lg-5 col-md-5">
                <div class="product-banner">
                    <a href="#">
                        <img src="assets/img/banner/@Model.Banners[2].Image"
                             alt="product banner" />
                    </a>
                </div>
            </div>
            <div class="col-xl-8 col-lg-7 col-md-7">
                <div class="top-seller-carousel slick-row-15 mtn-30">
                    @foreach (var product in Model.Products)
                    {
                        <div class="slide-item">
                            <div class="pro-item-small mt-30">
                                <div class="product-thumb">
                                    <a href="product-details.html">
                                        <img src="assets/img/product/@product.DisplayImage" alt="" />
                                    </a>
                                </div>
                                <div class="pro-small-content">
                                    <h6 class="product-name">
                                        <a href="product-details.html">@product.Name</a>
                                    </h6>
                                    <div class="price-box">
                                        <span class="price-regular">$@product.DiscountPrice</span>
                                        <span class="price-old"><del>$@product.SalePrice</del></span>
                                    </div>
                                    <div class="ratings d-flex justify-content-between">
                                        <div>
                                            @foreach (var star in product.Ratings)
                                            {
                                                <span><i class="ion-android-star"></i></span>
                                            }
                                        </div>
                                        <div><span style="color:black">(@product.Ratings.Count())</span></div>
                                            
                                        </div>
                                        
                                    <div class="product-link-2">
                                        <a href="#" data-toggle="tooltip" title="Wishlist">
                                            <i class="ion-android-favorite-outline"></i>
                                        </a>
                                        <a class="addToCart" data-id="@product.Id" data-toggle="tooltip" title="Add To Cart">
                                            <i class="ion-bag"></i>
                                        </a>
                                        <a asp-controller="product" asp-action="ProductModal" asp-route-id="@product.Id" class="productModal"
                                           data-toggle="modal"
                                           data-target="#quick_view">
                                            <span data-toggle="tooltip" title="Quick View">
                                                <i class="ion-ios-eye-outline"></i>
                                            </span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <!-- product item start -->
                </div>
            </div>
        </div>
    </div>
</section>
<!-- new products area end -->
<!-- latest blog area start -->
<section class="latest-blog-area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title text-center">
                    <h2 class="title">our blog</h2>
                    <p class="sub-title">
                        @Model.BlogDescription
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="blog-carousel-active slick-row-15">
                   @await Component.InvokeAsync("Blog")
                </div>
            </div>
        </div>
    </div>
</section>
<!-- latest blog area end -->
<!-- brand area start -->
<div class="brand-area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="brand-active-carousel">
                    @foreach(var brand in Model.Brands)
                    {
                        <div class="brand-item">
                            <a href="@brand.Link">
                                <img src="assets/img/brand/@brand.Logo" alt="brand image" />
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- brand area end -->